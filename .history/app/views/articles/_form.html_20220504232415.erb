<% if @article.errors.any?%>
  <h2>The following erros prevented the article from being saved</h2>
  <ul>
    <% @article.errors.full_messages.each do |msg|%>
      <p style="color:black" class="alert alert-danger"><%= msg %></p>
    <% end %>
  </ul>
<% end %>
<%= form_with model: @article, local: true do |f| %>
  <div class="form-group row">
    <%= f.label :title, style:"display:block",class: "col-2 col-form-label"%>
    <div class="col-10">
      <%= f.text_field :title%>
    </div>
  </div>
  <p>
    <%= f.label :description, style:"display:block"%>
    <%= f.text_area :description%>
  </p>
  <p>
    <%= f.submit%>
  </p>
<% end %>
