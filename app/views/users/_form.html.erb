<div class="card shadow p-3 mb-5 mt-3 bg-white rounded">
  <div class="card-body">
    <%= render 'shared/errors',obj: @user%>
    <%= form_with model: @user, local: true do |f| %>
      <div class="form-group mb-3 row">
        <div class="col-2 col-mb-2">
          <h4><%= f.label :username , style:"display:block",class: "form-label"%></h4>
        </div>
        <div class="col-10 col-mb-10">
          <%= f.text_field :username,class: "form-control shadow rounded", placeholder: "Username"%>
        </div>
      </div>
      <div class="form-group mb-3 row">
        <div class="col-2 col-mb-2">
          <h4><%= f.label :email, style:"display:block",class: "form-label"%></h4>
        </div>
        <div class="col col-mb-10">
          <%= f.email_field :email,class:"form-control shadow rounded", placeholder: "Email@example.com"%>
        </div>
      </div>
      <div class="form-group mb-3 row">
        <div class="col-2 col-mb-2">
          <h4><%= f.label :password, style:"display:block",class: "form-label"%></h4>
        </div>
        <div class="col col-mb-10">
          <%= f.password_field :password,class:"form-control shadow rounded",placeholder: "*******"%>
        </div>
      </div>
      <div class="d-flex form-group justify-content-end">
        <%= link_to "Back to Home", root_path,:class=>"btn btn-outline-danger me-2 shadow rounded" %>
        <%= f.submit "Sign Up", :class =>"btn btn-outline-success shadow rounded"%>
      </div>
    <% end %>
  </div>
</div>
