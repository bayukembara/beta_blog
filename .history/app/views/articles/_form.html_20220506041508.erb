<div class="card">
  <div class="card-body">
    <% if @article.errors.any?%>
      <h2>The following erros prevented the article from being saved</h2>
      <ul>
        <% @article.errors.full_messages.each do |msg|%>
          <p style="color:black" class="alert alert-danger"><%= msg %></p>
        <% end %>
      </ul>
    <% end %>
    <%= form_with model: @article,local: true do |f| %>
      <div class="form-group mb-3 row">
        <div class="col-2 col-mb-2">
          <h4><%= f.label :title , style:"display:block",class: "form-label"%></h4>
        </div>
        <div class="col-10 col-mb-10">
          <%= f.text_field :title,class: "form-control", placeholder: "Title"%>
        </div>
      </div>
      <div class="form-group mb-3 row">
        <div class="col-2 col-mb-2">
          <h4><%= f.label :description, style:"display:block",class: "form-label"%></h4>
        </div>
        <div class="col col-mb-10">
          <%= f.text_area :description,class:"form-control"%>
        </div>
      </div>
      <div class="d-flex form-group justify-content-end">
        <%= link_to "Back to articles", articles_path,:class=>"btn btn-outline-danger me-2" %>
        <%= f.submit :class =>"btn btn-outline-success"%>
      </div>
    <% end %>
  </div>
</div>
