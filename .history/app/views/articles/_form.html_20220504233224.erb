<div class="card">
  <div class="card-header">
    <h3 class="text-center text-uppercase">Form</h3>
  </div>
  <div class="card-body">
    <% if @article.errors.any?%>
      <h2>The following erros prevented the article from being saved</h2>
      <ul>
        <% @article.errors.full_messages.each do |msg|%>
          <p style="color:black" class="alert alert-danger"><%= msg %></p>
        <% end %>
      </ul>
    <% end %>
    <%= form_with model: @article, local: true do |f| %>
      <div class="form-group mb-3 row">
        <div class="col-2 col-mb-2">
          <h4><%= f.label :title , style:"display:block",class: "form-label"%></h4>
        </div>
        <div class="col-10 col-mb-10">
          <%= f.text_field :title,class: "form-control", placeholder: "Title"%>
        </div>
      </div>
      <div class="form-group mb-3 row">
        <div class="col-2 col-mb-2">
          <%= f.label :description, style:"display:block"%>
        </div>
        <%= f.text_area :description%>
      </div>
      <p>
        <%= f.submit%>
      </p>
    <% end %>
  </div>
</div>
