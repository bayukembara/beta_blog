<div class="container mb-2">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-xl-10">
        <div class="card rounded-3 text-black">
          <div class="row g-0">
            <div class="col-lg-6">
              <div class="card-body p-md-5 mx-md-4">
                <div class="text-center">
                  <h4 class="mt-1 mb-5 pb-1">Welcome to The Beta Blog</h4>
                </div>
                <h6>Please register to your account</h6>
                <%= render 'shared/errors',obj: @user%>
                <%= form_with model: @user,:html => {:class =>'needs-validation'}, local: true do |f| %>
                  <div class="form-floating mb-3">
                    <%= f.text_field :username,id:"floatingInput",class: "form-control shadow rounded text-dark", placeholder: "Username"%>
                    <label for="floatingInput">Username</label>
                  </div>
                  <div class="form-floating form-outline mb-3">
                    <%= f.email_field :email,id:"floatingInput",class:"form-control shadow rounded", placeholder: "Email@example.com"%>
                    <label for="floatingEmail">Email</label>
                  </div>
                  <div class="form-floating form-outline">
                    <%= f.password_field :password,id:"floatingInput",class:"form-control shadow rounded",placeholder: "*******"%>
                    <label for="floatingPassword">Password</label>
                  </div>
                  <div class="text-center pt-1 mb-5 pb-1 ">
                    <%= f.submit(@user.new_record? ? "Sign Up" : "Update Account", :class =>"btn btn-primary w-100 fa-lg gradient-custom-2 mb-2")%>
                    <%= link_to "Back to Home", root_path,:class=>"btn btn-primary w-100 fa-lg gradient-custom-2 mb-3" %>
                  </div>
                  <p class="text-center italic">Copyright Beta Blog</p>
                <% end %>
              </div>
            </div>
            <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
              <img src="https://source.unsplash.com/01t3ZAHn4hQ/600x800" style="width: 100%; height:100%; ">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
