<div class="container">
  <p style="color: green"><%= notice %></p>
  <h1 class="text-center mt-4">Articles</h1>
  <%= link_to "Home",root_path ,:class => "btn btn-outline-info text-right mb-1"%>
  <%= link_to "New article", new_article_path ,:class => "btn btn-outline-info ml-5 mb-1 text-right" %>
  <div class="row">
    <% @articles.each do |article|%>
      <div class="col-md-4">
        <div class="card">
          <div class="card-body">
            <div class="card-title">
              <h2 class="text-center"><%= article.title %></h2>
            </div>
            <hr>
            <div class="card-subtitle mb-2 text-muted">Programming</div>
            <p class="card-text"><%= truncate(article.description,length:50)%></p>
          </div>
          <div class="card-footer">
            <div class="row">
              <div class="col"> 
                <h6>Created At</h6>
                <%= article.created_at%>
              </div>
              <div class="col">
                <%= article.updated_at%>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
