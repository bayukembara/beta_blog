<p style="color: green"><%= notice %></p>
<h1>Articles</h1>
<table class="table table-responsive">
  <thead>
    <tr>
      <th><%= link_to "Home",root_path ,:class => "btn-btn info"%></th>
      <th><%= link_to "New article", new_article_path ,:class => "btn-btn info" %></th>
    </tr>
    <tr>
      <th class="text-center">Title</th>
      <th class="text-center">Description</th>
      <th class="text-center">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article|%>
      <tr>
        <td><%= article.title%></td>
        <td><%= article.description%></td>
        <td><%= link_to "Show", article_path(article),:class=> "btn btn-info" %></td>
        <td><%= link_to "Edit", edit_article_path(article),:class=> "btn btn-info"%></td>
        <td><%= button_to "Delete", article_path(article),:confirm => "Are you sure?",method: :delete ,:class => "btn btn-danger" ,onclick="return confirm('Are you sure you want to delete this item?' %></td>
      </tr>
    <%end%>
  </tbody>
</table>
