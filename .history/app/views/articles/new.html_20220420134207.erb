<h1>Create A New Article</h1>
<% if @article.errors.any?%>
  <h2>The following erros prevented the article from being saved</h2>
  <ul>
    <% @article.errores.full_messages.each do |msg|%>
      <%= msg %>
    <% end %>
  </ul>
<% end %>
<%= form_with scope: :articles, url: articles_path, local: true do |f| %>
  <p>
    <%= f.label :title, style:"display:block"%>
    <%= f.text_field :title%>
  </p>
  <p>
    <%= f.label :description, style:"display:block"%>
    <%= f.text_area :description%>
  </p>
  <p>
    <%= f.submit%>
  </p>
<% end %>
