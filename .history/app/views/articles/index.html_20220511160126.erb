<div class="container">
  <%= render 'layouts/messages'%>
  <h1 class="text-center mt-4">Articles</h1>
  <%= link_to "Home",root_path ,:class => "btn btn-outline-success text-right mb-1"%>
  <%= link_to "New article", new_article_path ,:class => "btn btn-outline-success ml-5 mb-1 text-right" %>
  <div class="row">
    <% @articles.each do |article|%>
      <div class="col-md-4 ">
        <div class="card mb-2 shadow bg-body rounded animate__animated animate__fadeInDown">
          <div class="card-body ">
            <div class="card-title">
              <h2 class="text-center fw-bold"><%= link_to article.title,article_path(article),:class =>"text-success", :style=>"text-decoration:none" %></h2>
            </div>
            <hr>
            <div class="row">
              <div class="col col-md-2">
                <div class="card-subtitle mb-2 text-light fw-normal fst-italic badge bg-dark">Programming</div>
              </div>
              <div class="col col-md-2">
                <div class="card-subtitle mb-2 text-light fw-normal fst-italic badge bg-dark"><%= article.user.username %></div>
              </div>
            </div>
            <p class="card-text"><%= truncate(article.description,length:50)%></p>
            <div class="row">
              <div class="col col-md-4 button-action">
                <%= link_to "Show", article_path(article),:class=>"btn btn-outline-success shadow "%>
              </div>
              <div class="col col-md-4 button-action">
                <%= link_to "Edit", edit_article_path(article),:class=>"btn btn-outline-primary shadow "%>
              </div>
              <div class="col col-md-4 button-action">
                <%= button_to "Delete", article_path(article),method: :delete,:class=>"btn btn-outline-danger shadow",:onclick=>"return confirm('Are you sure you want to delete this item')"%>
              </div>
            </div>
          </div>
          <div class="card-footer">
            <div class="row">
              <div class="col">
                <small>
                  <h6 class="text-center fw-lighter">Created At</h6>
                  <p class="d-flex justify-content-center mb-0 badge rounded-pill bg-secondary fw-normal"><%= time_ago_in_words(article.created_at)%></p>
                </small>
              </div>
              <div class="col">
                <small>
                  <h6 class="text-center fw-lighter">Updated At</h6>
                  <p class="d-flex justify-content-center mb-0 badge rounded-pill bg-secondary fw-normal"><%= time_ago_in_words(article.updated_at)%></p>
                </small>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
